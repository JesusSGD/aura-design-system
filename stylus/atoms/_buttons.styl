// Aura Design System

.button
    -webkit-writing-mode: horizontal-tb !important
    box-sizing: border-box
    margin: 0em
    letter-spacing: normal
    word-spacing: normal
    text-transform: none
    text-indent: 0px
    text-shadow: none
    font: inherit
    mixin-align-items(center)
    mixin-border-radius(var(--aura-button-radius))
    mixin-transition(300ms, background, cubic-bezier(0.4, 0, 0.6, 1) linear)
    font-weight: 600
    display inline-flex
    height (aura * 2) * 2
    padding 0 (aura * 2)
    border 2px solid

.button-fill
    @extend .button
    border-color var(--aura-accents-primary)
    color var(--aura-dark)
    background-color var(--aura-accents-primary)
    &:hover:not(.disabled)
        color var(--aura-accents-primary)
        background-color initial

.button-pill
    @extend .button
    color var(--aura-accents-primary)
    border-color var(--aura-accents-primary)
    background-color transparent
    &:hover:not(.disabled)
        background-color var(--aura-accents-primary)
        color var(--aura-dark)

.button-link
    @extend .button
    color: var(--aura-accents-10)
    border: 0
    text-decoration: underline
    background-color transparent
    &:hover:not(.disabled)
        color: var(--aura-base-color)
        background-color: var(--aura-accents-1)

.button-menu
    display block
    padding (aura * 0.5) aura
    @extend .h6
    font-weight bold
    text-decoration none
    transform translateZ(0)
    transition opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1)
    white-space: nowrap
    & input
        max-width 260px
        border: 0
        font-weight: 700
        padding-left: (aura * 3.5)
        
a
    text-decoration: none
    color var(--aura-accents-10)
    cursor pointer
    &:visited:not(.button):not(.button-pill):not(.button-link):not(.button-fill):not(.button-menu)
        color: inherit
    
button
    cursor pointer 
