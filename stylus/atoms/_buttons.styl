// Aura Design System

.interactive
    min-width 48px
    min-height 48px 

.button
    -webkit-writing-mode: horizontal-tb !important
    box-sizing: border-box
    margin: 0em
    letter-spacing: normal
    word-spacing: normal
    text-transform: none
    text-indent: 0px
    text-shadow: none
    font: inherit
    mixin-align-items(center)
    mixin-border-radius(aura)
    mixin-transition(300ms, background, cubic-bezier(0.4, 0, 0.6, 1) linear)
    font-weight: 600
    display inline-flex
    height (aura * 2) * 2
    padding 0 (aura * 2)
    border 2px solid

.button-fill
    @extend .button
    border-color var(--aura-accents-primary)
    color var(--aura-dark)
    background-color var(--aura-accents-primary)
    &:hover:not(.disabled)
        color var(--aura-accents-primary)
        background-color var(--aura-dark)

.button-pill
    @extend .button
    color var(--aura-accents-primary)
    border-color var(--aura-accents-primary)
    background-color transparent
    &:hover:not(.disabled)
        background-color var(--aura-accents-primary)
        color var(--aura-dark)

.button-link
    @extend .button
    color: var(--aura-accents-10)
    border: 0
    text-decoration: underline
    background-color transparent
    &:hover:not(.disabled)
        color: var(--aura-base-color)
        background-color: var(--aura-accents-1)
        
a
    text-decoration: none
    color var(--aura-accents-10)
    cursor pointer
    &:hover:not(.button):not(.button-pill):not(.button-link):not(.disable-button):not(.button-fill)
        color var(--aura-accents-primary)
     &:visited:not(.button):not(.button-pill):not(.button-link):not(.disable-button):not(.button-fill)
        color: inherit
    
button
    cursor pointer 
