// Aura Design System

.inputer
    @extend .inside-pad
    position relative
    margin-bottom aura * 1.5
    &-group
        position: relative;
        box-sizing: border-box;
        label:not(.original)
            position absolute
            transform-origin: top left
            transform: translate(0, aura * -2);
        span
            transform-origin top left
            transform translate( aura * 0.5, aura * -1 )


    label, input 
        transition: all .1s ease-in-out
        touch-action: manipulation
    
    textarea 
        mixin-border-radius(aura * 0.5)
        @extend p
        width 100%
        border 0
        background-color var(--realse)
        box-sizing border-box
        box-shadow none
        color Root
        font-family inherit
        height 106px
        padding aura * 2
        &:focus
            background var(--realse)
            outline none
    
   

    input 
        mixin-border-radius(aura * 0.5)
        width 100%
        background-color var(--realse)
        border 0
        box-sizing border-box
        box-shadow none
        color var(--root)
        font-family inherit
        font: inherit;
        height aura * 4
        padding aura *2
        line-height aura * 4
        cursor: text;
        &:focus
            background var(--realse)
            outline 0


    input:placeholder-shown + label 
        cursor: text;
        max-width: 66.66%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        transform-origin: left bottom;
        opacity 0
        z-index -1

    input:not(:placeholder-shown) + label 
        opacity 1
        cursor pointer
        z-index 0
    
    .switch 
        position: relative;
        display: inline-block;
        width: aura * 5;
        height: aura * 2.5;
        input 
            opacity: 0;
            width: 0;
            height: 0;