// Aura Design System

.hide-content
    display none

.accor
    @extend .mod
    @extend .wall-pad
    &-title
        @extend .mod-title
        cursor pointer
    &-hide
        display: none
    &-detail
        display: none
        @extend .mod-detail
        background-color: var(--aura-accents-0)

.on
    .accor
        &-detail
            display: block
        &-hide
            display block
        &-glyph
            transform rotate(180deg)
    &.hide-content
        display block
        

            