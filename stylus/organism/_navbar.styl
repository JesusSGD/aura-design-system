// Aura Design System 

.v-list
    li
        @extend .valign
        @extend .vfluid

.nav-list
    align-items: center
    cursor default
    margin 0 -10px
    width auto
    height aura * 4
    mixin-flex()
    -webkit-box-pack justify
    -ms-flex-pack justify
    justify-content space-between
    mixin-user-select(none)

    .item
        line-height 2.7
        letter-spacing -.01em
        position relative
        z-index 1
        display inline-block
        padding 0 aura
        opacity 1
        background no-repeat
        text-decoration none
        outline-offset -7px

.button-menu
    display block
    padding (aura * 0.5) aura
    @extend .h6
    font-weight bold
    text-decoration none
    transform translateZ(0)
    transition opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1)
    white-space: nowrap
    & input
        max-width 260px
        border: 0
        font-weight: 700
        padding-left: (aura * 3.5)


        
        



