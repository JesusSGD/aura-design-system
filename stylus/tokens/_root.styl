    --purple: Purple
    --white: White
    --black: Black
    --orange: Orange
    --orange-rose: OrangeRose
    --pink: Pink
    --pink-purple: PinkPurple
    --blue: Blue
    --teal-green: TealGreen
    --green: Green
    --lemon-green: LemonGreen
    --yellow: Yellow
    --cold-grey: ColdGrey
    --base-color: darken(Blue, 20%)
