{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "declaration": true,
      "moduleResolution": "node",
      "outDir": "dist/",
      "jsx": "react-jsx",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": false,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": false
    },
    "include": ["atoms", "layout", "molecules", "static", "utils", "hoc", "global.tsx", "./index.d.ts"],
    "exclude": ["node_modules", "dist"]
  }
